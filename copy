  if (servicesIconsContainer && servicesInput) {
    servicesIconsContainer.innerHTML = SERVICE_ICONS.map(s =>
      `<div class="service-icon-select" data-key="${s.key}" title="${s.label}">
        <span class="icon">${s.icon}</span>
