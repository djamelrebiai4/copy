// Ù†Ø§ÙØ°Ø© ØªØ£ÙƒÙŠØ¯ Ø­Ø°Ù Ø¹Ø±Ø¶
function confirmDeleteOffer(offerId) {
  if (!window.confirm('Ù‡Ù„ Ø£Ù†Øª Ù…ØªØ£ÙƒØ¯ Ø£Ù†Ùƒ ØªØ±ÙŠØ¯ Ø­Ø°Ù Ù‡Ø°Ø§ Ø§Ù„Ø¹Ø±Ø¶ØŸ')) return;
  deleteOffer(offerId)
    .then(() => {
      alert('ØªÙ… Ø­Ø°Ù Ø§Ù„Ø¹Ø±Ø¶ Ø¨Ù†Ø¬Ø§Ø­');
      loadAndRenderOffers();
    })
    .catch(() => {
      alert('ÙØ´Ù„ Ø­Ø°Ù Ø§Ù„Ø¹Ø±Ø¶');
    });
}
