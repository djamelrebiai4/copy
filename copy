    <div id="bottom-nav-placeholder"></div>

    <script>
        // استدعاء الشريط العلوي والسفلي من ملفات خارجية
        async function loadComponents() {
            try {
                // تحميل الشريط العلوي
                const headerResponse = await fetch('components/header.html');
                const headerHtml = await headerResponse.text();
                document.getElementById('header-placeholder').innerHTML = headerHtml;
                
                // تحميل الشريط السفلي
                const navResponse = await fetch('components/bottom-nav.html');
                const navHtml = await navResponse.text();
                document.getElementById('bottom-nav-placeholder').innerHTML = navHtml;
                
                // تفعيل التنقل السفلي بعد التحميل
                setTimeout(activateBottomNav, 100);
            } catch (error) {
                console.error('Error loading components:', error);
            }
        }

        // تفعيل العنصر النشط في الشريط السفلي
        function activateBottomNav() {
            const navItems = document.querySelectorAll('.bottom-nav .nav-item');
            navItems.forEach(item => {
                item.addEventListener('click', function() {
                    navItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        }

        // تأثير التمرير على الخلفية
        window.addEventListener('scroll', function() {
            const heroSection = document.getElementById('heroSection');
            const scrollPosition = window.scrollY;
            
            if (scrollPosition > 50) {
                heroSection.classList.add('scrolled');
            } else {
                heroSection.classList.remove('scrolled');
            }
        });

        // تفعيل الأسئلة الشائعة
        document.addEventListener('DOMContentLoaded', function() {
            loadComponents();
            
            document.querySelectorAll('.faq-question').forEach(question => {
                question.addEventListener('click', () => {
                    const item = question.parentElement;
                    item.classList.toggle('active');
                    
                    // إغلاق البقية
                    document.querySelectorAll('.faq-item').forEach(otherItem => {
                        if (otherItem !== item) {
                            otherItem.classList.remove('active');
                        }
                    });
                });
            });

            // منع التكبير بالضغط المزدوج
            document.addEventListener('dblclick', function(e) {
                e.preventDefault();
            }, { passive: false });
        });
    </script>
