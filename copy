    .then((response) => response.text())
    .then((html) => {
      document.getElementById("sidebar").innerHTML = html;
      // ØªÙ…ÙŠÙŠØ² Ø§Ù„ØµÙØ­Ø© Ø§Ù„Ø­Ø§Ù„ÙŠØ©
