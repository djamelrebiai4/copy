    try {
      // Ø¥Ø°Ø§ ÙƒØ§Ù† JSON (Ù…Ø«Ù„Ø§Ù‹ '{"visa":true,"meals":true}')
      services = JSON.parse(services);
    } catch {
      // Ø¥Ø°Ø§ ÙƒØ§Ù† Ø³Ù„Ø³Ù„Ø© Ù…ÙØµÙˆÙ„Ø© Ø¨ÙÙˆØ§ØµÙ„ (Ù…Ø«Ù„Ø§Ù‹ 'visa,meals')
      const arr = services.split(',').map(s => s.trim()).filter(Boolean);
      const obj = {};
      arr.forEach(k => obj[k] = true);
      services = obj;
    }
  }
  const icons = {
    visa:    '<span title="ØªØ£Ø´ÙŠØ±Ø©" style="margin-left:4px;font-size:1.2em;">ğŸ›‚</span>',
    meals:   '<span title="Ø§Ù„Ø¥Ø·Ø¹Ø§Ù…" style="margin-left:4px;font-size:1.2em;">ğŸ½ï¸</span>',
    transport: '<span title="Ø§Ù„Ù†Ù‚Ù„" style="margin-left:4px;font-size:1.2em;">ğŸšŒ</span>',
    guide:   '<span title="Ø§Ù„Ø¥Ø±Ø´Ø§Ø¯" style="margin-left:4px;font-size:1.2em;">ğŸ§‘â€ğŸ«</span>',
    flight:  '<span title="Ø·ÙŠØ±Ø§Ù†" style="margin-left:4px;font-size:1.2em;">âœˆï¸</span>',
  };
  const keyMap = {
    visa: "visa",
    ØªØ£Ø´ÙŠØ±Ø©: "visa",
    meals: "meals",
    Ø§Ø·Ø¹Ø§Ù…: "meals",
    ÙØ·ÙˆØ±: "meals",
    transport: "transport",
    Ù†Ù‚Ù„: "transport",
    guide: "guide",
    Ø§Ø±Ø´Ø§Ø¯: "guide",
    Ø·ÙŠØ±Ø§Ù†: "flight",
    flight: "flight",
  };
  return Object.keys(services)
    .filter((k) => services[k])
    .map((k) => icons[keyMap[k]] || `<span title="${k}" style="margin-left:4px;font-size:1.2em;">ğŸ”¹</span>`)
    .join("");
}

// Ø¯Ø§Ù„Ø© Ù„Ø¬Ù„Ø¨ Ø§Ù„ÙˆÙƒØ§Ù„Ø§Øª ÙˆØªØ¹Ø¨Ø¦Ø© Ù‚Ø§Ø¦Ù…Ø© Ø§Ù„Ø§Ø®ØªÙŠØ§Ø± ÙÙŠ Ù†Ù…ÙˆØ°Ø¬ Ø¥Ø¶Ø§ÙØ© Ø¹Ø±Ø¶
async function populateAgenciesSelect() {
  const select = document.getElementById('agencySelect');
  if (!select) return;
  select.innerHTML = '<option value="">Ø¬Ø§Ø±ÙŠ Ø§Ù„ØªØ­Ù…ÙŠÙ„...</option>';
  try {
    const token = localStorage.getItem('umrah_admin_token');
    if (!token) {
      select.innerHTML = '<option value="">ÙŠØ¬Ø¨ ØªØ³Ø¬ÙŠÙ„ Ø§Ù„Ø¯Ø®ÙˆÙ„ Ø£ÙˆÙ„Ø§Ù‹</option>';
      return;
    }
    const res = await fetch('http://192.168.0.114:3001/api/agencies/all', {
      method: 'GET',
      headers: {
        'Authorization': 'Bearer ' + token,
        'Accept': 'application/json'
      }
    });
    if (!res.ok) {
      select.innerHTML = '<option value="">ØªØ¹Ø°Ø± ØªØ­Ù…ÙŠÙ„ Ø§Ù„ÙˆÙƒØ§Ù„Ø§Øª (HTTP ' + res.status + ')</option>';
      return;
    }
