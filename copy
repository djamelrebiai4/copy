    const agencies = Array.isArray(data.agencies) ? data.agencies : [];
    if (agencies.length === 0) {
      select.innerHTML = '<option value="">Ù„Ø§ ØªÙˆØ¬Ø¯ ÙˆÙƒØ§Ù„Ø§Øª Ù…ØªØ§Ø­Ø©</option>';
      return;
    }
    select.innerHTML = '<option value="">Ø§Ø®ØªØ± Ø§Ù„ÙˆÙƒØ§Ù„Ø©</option>';
    agencies.forEach(agency => {
      const opt = document.createElement('option');
      opt.value = agency.id || agency._id || agency.agency_id || agency.uuid || agency.name;
      opt.textContent = agency.name;
      select.appendChild(opt);
    });
  } catch (e) {
    select.innerHTML = '<option value="">ØªØ¹Ø°Ø± ØªØ­Ù…ÙŠÙ„ Ø§Ù„ÙˆÙƒØ§Ù„Ø§Øª (Ø±Ø§Ø¬Ø¹ Ø§Ù„ÙƒÙˆÙ†Ø³ÙˆÙ„)</option>';
  }
}

