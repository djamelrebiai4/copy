      method: 'GET',
      headers: {
        'Authorization': token ? 'Bearer ' + token : '',
        'Accept': 'application/json'
      }
    });
    if (!res.ok) {
      select.innerHTML = '<option value="">ØªØ¹Ø°Ø± ØªØ­Ù…ÙŠÙ„ Ø´Ø±ÙƒØ§Øª Ø§Ù„Ø·ÙŠØ±Ø§Ù†</option>';
